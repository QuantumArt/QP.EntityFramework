		context.AddCodeFile(@"..\packages\QP8.EntityFramework6.1.1.2\include\User.cs", settings.GenerateClasses);
		context.AddCodeFile(@"..\packages\QP8.EntityFramework6.1.1.2\include\UserGroup.cs", settings.GenerateClasses);
		context.AddTemplate(AddClasses, settings.GenerateClasses);
		context.AddTemplateFile(className + ".Contents.Extensions.cs", AddClassExtensions, settings.GenerateClasses && settings.GenerateExtensions);
	}
