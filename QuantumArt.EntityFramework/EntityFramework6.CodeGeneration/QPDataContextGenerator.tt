		context.AddTemplateFile("StaticSchemaProvider.cs", AddStaticSchemaProvider, settings.GenerateMappings);
		
		context.AddCodeFile(@"..\packages\QP8.EntityFramework6.1.1.2\include\IQPArticle.cs", settings.GenerateInterface);
		context.AddCodeFile(@"..\packages\QP8.EntityFramework6.1.1.2\include\IQPLibraryService.cs", settings.GenerateInterface);
		context.AddCodeFile(@"..\packages\QP8.EntityFramework6.1.1.2\include\IQPFormService.cs", settings.GenerateInterface);

		context.AddCodeFile(@"..\packages\QP8.EntityFramework6.1.1.2\include\IQPSchema.cs", settings.GenerateMappingInterface);
		context.AddCodeFile(@"..\packages\QP8.EntityFramework6.1.1.2\include\IMappingConfigurator.cs", settings.GenerateMappingInterface);
